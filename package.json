{
  "name": "markserv",
  "version": "2.17.4",
  "description": "üèÅ  serve markdown as html (GitHub style), index directories, live-reload as you edit",
  "preferGlobal": true,
  "type": "module",
  "scripts": {
    "test": "xo && npm run cover",
    "cover": "nyc --reporter=lcov --reporter=html --reporter=text ava",
    "coveralls": "cat ./coverage/lcov.info | ./node_modules/.bin/coveralls -v"
  },
  "keywords": [
    "code",
    "directory",
    "gfm",
    "github",
    "github flavored markdown",
    "highlighting",
    "html",
    "include",
    "index",
    "indexes",
    "links",
    "live",
    "live-reload",
    "livereload",
    "markdown",
    "markdown-it",
    "marked",
    "markitdown",
    "md",
    "realtime",
    "reload",
    "server",
    "syntax highlighting",
    "template",
    "templating"
  ],
  "husky": {
    "hooks": {
      "pre-commit": "npm test"
    }
  },
  "bin": {
    "markserv": "lib/cli.js",
    "readme": "lib/readme.js"
  },
  "files": [
    "lib/cli.js",
    "lib/cli-help.txt",
    "lib/readme.js",
    "lib/server.js",
    "lib/splash.js",
    "lib/icons",
    "lib/templates/directory.html",
    "lib/templates/markdown.html",
    "lib/templates/error.html",
    "lib/templates/github.less",
    "lib/templates/highlight-js-github-gist.css",
    "lib/templates/markserv.css",
    "media/markserv-favicon-96x96.png",
    "media/markserv-logo-term.png"
  ],
  "author": "Alistair MacDonald <al@pwn.io>",
  "email": "al@pwn.io",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "http://github.com/e40/markserv.git"
  },
  "dependencies": {
    "analyze-deps": "^2.0.0",
    "bluebird": "^3.7.2",
    "chalk": "^5.3.0",
    "commander": "^11.1.0",
    "connect": "^3.7.0",
    "connect-livereload": "^0.6.1",
    "deepmerge": "^4.3.1",
    "emoji-regex": "^10.2.1",
    "handlebars": "^4.7.8",
    "implant": "^2.0.3",
    "is-online": "^10.0.0",
    "less": "^4.2.0",
    "livereload": "^0.9.3",
    "markdown-it": "^13.0.2",
    "markdown-it-anchor": "^8.6.7",
    "markdown-it-emoji": "^2.0.2",
    "markdown-it-highlightjs": "^4.0.1",
    "markdown-it-include": "^2.0.0",
    "markdown-it-mathjax": "^2.0.0",
    "markdown-it-table-of-contents": "^0.6.0",
    "markdown-it-task-lists": "^2.1.1",
    "meow": "^12.1.1",
    "micromatch": "^4.0.5",
    "mime": "^3.0.0",
    "open": "^9.1.0",
    "markserv": "git+ssh://git@github.com:e40/markserv.git",
    "promptly": "^3.2.0",
    "send": "^0.18.0",
    "snyk": "^1.1234.0",
    "term-img": "^6.0.0",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "all-contributors-cli": "^6.11.2",
    "ava": "^2.4.0",
    "coveralls": "^3.0.9",
    "get-port": "^5.1.0",
    "husky": "^3.1.0",
    "nyc": "^15.0.0",
    "request": "^2.88.0",
    "xo": "^0.25.3"
  },
  "xo": {
    "esnext": true,
    "semicolon": false,
    "rules": {
      "node/no-unpublished-bin": 2
    }
  },
  "ava": {
    "failfast": true
  }
}
